package intellect.naveenkumar;

import java.util.Scanner;

public class ChildandChocolate {

	public static void main(String[] args) {
		int sum=0,i;
		Scanner sc=new Scanner(System.in);  
		System.out.print("Enter the number of Chocolate -> ");  
		int choco=sc.nextInt();  
		System.out.print("Enter the number of Children -> ");  
		int child=sc.nextInt();  
		for(i=1;i<=child;i++)
		{
			if(choco>=i){
				choco=choco-i;
				sum++;
				}
		}
		System.out.println("Chocolates remaining:"+choco);
		System.out.println("No.of children who got the Chocolates:"+sum);
		

	}

}

